for x
do
echo "editing $x: \c"
if test "$x" = changer.sed; then
	echo "not editing sedscript!"
elif test -s $x; then
	sed -f changer.sed $x > /tmp/$x
	if test -s /tmp/$x
	then
	cmp -s $x /tmp/$x && echo "file not changed: \c";\
		mv /tmp/$x $x;echo "done"
	else
	echo "Sed produced an empty file - check your sedscript."
	fi
else
	echo "original file is empty."
fi
done
echo "all done"
